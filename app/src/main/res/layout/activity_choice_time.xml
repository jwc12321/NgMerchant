<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround3"
    android:id="@+id/view_rl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/appText1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/choice_shop_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_forty_nine_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/all_shop"
                android:textColor="@color/appText5"
                android:textSize="15sp" />

            <View
                style="@style/st_line"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_forty_nine_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/query_all"
                style="@style/choice_module_ll">

                <TextView
                    style="@style/choice_module_text"
                    android:text="@string/query_all" />

                <ImageView
                    android:id="@+id/query_all_iv"
                    style="@style/choice_module_iv" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/query_monthly"
                style="@style/choice_module_ll">

                <TextView
                    style="@style/choice_module_text"
                    android:text="@string/query_monthly" />

                <ImageView
                    android:id="@+id/query_monthly_iv"
                    style="@style/choice_module_iv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/query_stage"
                style="@style/choice_module_ll">

                <TextView
                    style="@style/choice_module_text"
                    android:text="@string/query_stage" />

                <ImageView
                    android:id="@+id/query_stage_iv"
                    style="@style/choice_module_iv" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/st_line" />

        <LinearLayout
            android:id="@+id/choice_time_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_sixty_two_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/start_time_ll"
                style="@style/choice_module_ll"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/common_one_hundred_and_fifty_five_margin"
                    android:layout_height="@dimen/common_forty_margin"
                    android:background="@drawable/choice_time_bg">

                    <ImageView
                        android:id="@+id/start_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_seven_margin"
                        android:src="@mipmap/choice_time" />

                    <View
                        android:id="@+id/start_st"
                        style="@style/v_st_line"
                        android:layout_marginLeft="@dimen/common_seven_margin"
                        android:layout_toRightOf="@id/start_iv" />

                    <TextView
                        android:id="@+id/start_time_tv"
                        style="@style/choice_module_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_eighteen_margin"
                        android:layout_marginRight="@dimen/common_eighteen_margin"
                        android:layout_toRightOf="@id/start_st"
                        tools:text="2018-06" />

                    <ImageView
                        style="@style/choice_time_go_arrow"
                        android:layout_toRightOf="@id/start_time_tv" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/end_time_ll"
                style="@style/choice_module_ll"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="@dimen/common_one_hundred_and_fifty_five_margin"
                    android:layout_height="@dimen/common_forty_margin"
                    android:background="@drawable/choice_time_bg">

                    <ImageView
                        android:id="@+id/end_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_seven_margin"
                        android:src="@mipmap/choice_time" />

                    <View
                        android:id="@+id/end_st"
                        style="@style/v_st_line"
                        android:layout_marginLeft="@dimen/common_seven_margin"
                        android:layout_toRightOf="@id/end_iv" />

                    <TextView
                        android:id="@+id/end_time_tv"
                        style="@style/choice_module_text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_eighteen_margin"
                        android:layout_marginRight="@dimen/common_eighteen_margin"
                        android:layout_toRightOf="@id/end_st"
                        tools:text="2018-06" />

                    <ImageView
                        style="@style/choice_time_go_arrow"
                        android:layout_toRightOf="@id/end_time_tv" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/confirm_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_forty_nine_margin"
            android:background="@drawable/confirm_time_bg"
            android:text="@string/confirm"
            android:textColor="@color/appText1"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>