<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/income_item">

    <TextView
        android:id="@+id/time"
        style="@style/text_fifteen_style"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_twenty_two_margin"
        tools:text="2018" />

    <TextView
        android:id="@+id/income_number_tv"
        style="@style/text_fifteen_style"
        android:layout_below="@id/time"
        android:layout_marginLeft="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_twelve_margin"
        android:text="@string/income_number" />

    <TextView
        style="@style/text_fifteen_style"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time"
        android:layout_marginRight="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_twelve_margin"
        android:text="@string/total" />

    <RelativeLayout
        android:id="@+id/detail_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/income_number_tv"
        android:layout_marginLeft="@dimen/common_twelve_margin"
        android:layout_marginRight="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_fourteen_margin">

        <TextView
            android:id="@+id/income_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_twenty_seven_margin"
            android:textColor="@color/appText3"
            android:textSize="15sp"
            tools:text="6" />

        <TextView
            android:id="@+id/cash_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/appText3"
            android:textSize="17sp"
            tools:text="现金" />

        <TextView
            android:id="@+id/energy_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cash_income"
            android:layout_marginTop="@dimen/common_six_margin"
            android:textColor="@color/appText3"
            android:textSize="17sp"
            tools:text="能量" />
    </RelativeLayout>

    <View
        style="@style/st_line"
        android:layout_below="@id/detail_rl"
        android:layout_marginTop="@dimen/common_twenty_six_margin" />
</RelativeLayout>