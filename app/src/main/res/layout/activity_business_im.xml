<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround1"
    android:orientation="vertical"
    android:id="@+id/item_business_im">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/business_im" />
    </RelativeLayout>

    <com.nenggou.slsm.common.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_twelve_margin"
                android:background="@color/appText1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/item_head_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_seventy_four_margin"
                    android:layout_marginLeft="@dimen/common_twelve_margin"
                    android:layout_marginRight="@dimen/common_twelve_margin">

                    <TextView
                        style="@style/setting_item_text_style"
                        android:text="@string/head_phone" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/head_photo"
                        style="@style/head_PhotoStyle"
                        android:layout_width="@dimen/common_fifty_two_margin"
                        android:layout_height="@dimen/common_fifty_two_margin"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:riv_oval="true"
                        tools:background="@null"
                        tools:src="@mipmap/app_icon" />

                    <View
                        style="@style/st_line"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout style="@style/persion_item_fl_style">

                    <TextView
                        style="@style/setting_item_text_style"
                        android:text="@string/business_name" />

                    <TextView
                        android:id="@+id/business_name"
                        style="@style/setting_item_right_text_style"
                        tools:text="小于" />

                    <View
                        style="@style/st_line"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout style="@style/persion_item_fl_style">

                    <TextView
                        style="@style/setting_item_text_style"
                        android:text="@string/service_type" />

                    <TextView
                        android:id="@+id/service_type"
                        style="@style/setting_item_right_text_style"
                        tools:text="美食" />

                    <View
                        style="@style/st_line"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                style="@style/persion_item_fl_style"
                android:layout_marginTop="@dimen/common_twelve_margin">

                <TextView
                    style="@style/setting_item_text_style"
                    android:text="@string/ut_date" />

                <TextView
                    android:id="@+id/ut_date"
                    style="@style/setting_item_right_text_style"
                    tools:text="2187" />

                <View
                    style="@style/st_line"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>
    </com.nenggou.slsm.common.widget.ReboundScrollView>
</LinearLayout>