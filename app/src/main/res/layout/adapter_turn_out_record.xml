<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_fifteen_margin"
        android:background="@color/appText1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/turn_out_state"
            style="@style/fifteen_apptext5_text_style"
            android:layout_marginLeft="@dimen/common_twelve_margin"
            android:layout_marginTop="@dimen/common_seventeen_margin"
            tools:text="转出成功" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/turn_out_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_twelve_margin"
                android:textColor="@color/appText5"
                android:textSize="13sp"
                tools:text="转出100个能量" />

            <TextView
                android:id="@+id/turn_out_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/common_ten_margin"
                android:layout_marginRight="@dimen/common_twelve_margin"
                android:layout_marginTop="@dimen/common_ten_margin"
                android:textColor="@color/appText3"
                android:textSize="17sp"
                tools:text="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_twenty_margin">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_twelve_margin"
                android:textColor="@color/appText6"
                android:textSize="12sp"
                tools:text="2018" />

            <TextView
                android:id="@+id/turn_out_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_twelve_margin"
                android:textColor="@color/appText6"
                android:textSize="12sp"
                tools:text="余额" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>