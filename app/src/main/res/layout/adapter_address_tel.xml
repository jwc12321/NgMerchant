<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/head_photo"
        style="@style/head_PhotoStyle"
        android:layout_width="@dimen/common_forty_margin"
        android:layout_height="@dimen/common_forty_margin"
        android:layout_marginLeft="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_fourteen_margin"
        app:riv_oval="true"
        tools:background="@null"
        tools:src="@mipmap/app_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_ten_margin"
        android:layout_marginTop="@dimen/common_twenty_six_margin"
        android:layout_toRightOf="@id/head_photo"
        android:textColor="@color/appText5"
        android:textSize="15sp"
        tools:text="小于" />

    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/common_ten_margin"
        android:layout_marginTop="@dimen/common_twenty_two_margin"
        android:layout_toRightOf="@id/head_photo"
        android:textColor="@color/appText6"
        android:textSize="14sp"
        tools:text="121212121212" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tel"
        android:layout_marginLeft="@dimen/common_ten_margin"
        android:layout_marginTop="@dimen/common_fourteen_margin"
        android:layout_toRightOf="@id/head_photo"
        android:textColor="@color/appText6"
        android:textSize="14sp"
        tools:text="杭州市下城区附近看到附近的防空洞" />

    <View
        style="@style/st_line"
        android:layout_below="@id/address"
        android:layout_marginTop="@dimen/common_twenty_three_margin" />
</RelativeLayout>