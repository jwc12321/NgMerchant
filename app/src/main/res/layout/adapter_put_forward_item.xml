<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_seventy_margin"
    android:id="@+id/putforward_item">

    <TextView
        android:id="@+id/name"
        style="@style/modify_password_style"
        android:layout_marginLeft="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_ten_margin"
        tools:text="现金提现" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_ten_margin"
        android:layout_marginLeft="@dimen/common_twelve_margin"
        android:textColor="@color/appText6"
        android:textSize="13sp"
        tools:text="20154554" />

    <TextView
        android:id="@+id/price"
        style="@style/modify_password_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_ten_margin"
        tools:text="现金提现" />

    <TextView
        android:id="@+id/bank_name"
        style="@style/modify_password_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/common_ten_margin"
        android:layout_marginRight="@dimen/common_twelve_margin"
        tools:text="现金提现" />
    <View
        style="@style/persion_st_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>