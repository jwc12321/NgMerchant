<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_seventy_margin"
    android:background="@color/appText1">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/head_photo"
        style="@style/head_PhotoStyle"
        android:layout_width="@dimen/common_forty_margin"
        android:layout_height="@dimen/common_forty_margin"
        android:layout_marginLeft="@dimen/common_twelve_margin"
        android:layout_marginTop="@dimen/common_fourteen_margin"
        app:riv_oval="true"
        tools:background="@null"
        tools:src="@mipmap/app_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_ten_margin"
        android:layout_marginTop="@dimen/common_fourteen_margin"
        android:layout_toRightOf="@id/head_photo"
        android:textColor="@color/appText5"
        android:textSize="15sp"
        tools:text="能手收入" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/head_photo"
        android:layout_marginLeft="@dimen/common_ten_margin"
        android:layout_marginTop="@dimen/common_fourteen_margin"
        android:layout_toRightOf="@id/head_photo"
        android:textColor="@color/appText5"
        android:textSize="15sp"
        tools:text="2018" />

    <TextView
        android:id="@+id/price"
        style="@style/apptext_five_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_twelve_margin"
        tools:text="+100" />

    <View
        style="@style/st_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>