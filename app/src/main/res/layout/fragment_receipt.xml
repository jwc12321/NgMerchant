<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/receipt_bg"
    android:gravity="center_vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="@dimen/common_sixty_margin"
        android:paddingBottom="@dimen/common_sixty_margin"
        android:paddingEnd="@dimen/common_thirty_margin"
        android:paddingLeft="@dimen/common_thirty_margin"
        android:paddingRight="@dimen/common_thirty_margin"
        android:paddingStart="@dimen/common_thirty_margin" />
</LinearLayout>