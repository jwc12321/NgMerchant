<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backGround1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_one_hundred_margin"
        android:layout_marginTop="@dimen/common_twenty_margin"
        android:background="@color/appText1">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/head_photo"
            style="@style/noPhotoStyle"
            android:layout_width="@dimen/common_fifty_five_margin"
            android:layout_height="@dimen/common_fifty_five_margin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_twelve_margin"
            app:riv_oval="true"
            tools:background="@null"
            tools:src="@mipmap/default_head_image_icon" />

        <TextView
            android:id="@+id/user_name"
            style="@style/modify_password_style"
            android:layout_marginLeft="@dimen/common_thirteen_margin"
            android:layout_marginTop="@dimen/common_twenty_five_margin"
            android:layout_toRightOf="@id/head_photo"
            tools:text="小于" />

        <TextView
            android:id="@+id/bus_name"
            style="@style/modify_password_style"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_twenty_five_margin"
            android:layout_marginLeft="@dimen/common_thirteen_margin"
            android:layout_toRightOf="@id/head_photo"
            tools:text="小于" />

        <TextView
            android:id="@+id/in_payment"
            style="@style/modify_password_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_twelve_margin"
            android:text="支付中...."
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/after_payment_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_twelve_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/appText3"
                android:textSize="18sp"
                tools:text="10" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/appText6"
                android:textSize="12sp"
                tools:text="10" />

            <TextView
                android:id="@+id/few_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/appText6"
                android:textSize="12sp"
                tools:text="10" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/appText6"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>