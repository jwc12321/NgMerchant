<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/appText3" />
            <stroke android:color="@color/appText3" android:width="1dp"/>
            <size
                android:width="325dp"
                android:height="44dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/backGround3" />
            <stroke android:color="@color/appText3" android:width="1dp"/>
            <size
                android:width="325dp"
                android:height="44dp" />
        </shape>
    </item>
</selector>